<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/milky_white"
    android:orientation="vertical"
    android:visibility="gone">

    <RadioGroup
        android:id="@+id/edit_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_layout_transparent"
        android:orientation="horizontal"
        android:padding="5dp">

        <RadioButton
            android:id="@+id/rb_xbbj"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/ic_tools_xbbj_selector"
            android:gravity="center"
            android:onClick="myClick"
            android:text="@string/tools_xbbj"
            android:textSize="10sp" />

        <RadioButton
            android:id="@+id/rb_xbfz"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/ic_tools_xbfz_selector"
            android:gravity="center"
            android:onClick="myClick"
            android:text="@string/tools_xbfz"
            android:textSize="10sp" />

        <RadioButton
            android:id="@+id/rb_xbsc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/ic_tools_xbsc_selector"
            android:gravity="center"
            android:onClick="myClick"
            android:text="@string/tools_xbsc"
            android:textSize="10sp" />

        <RadioButton
            android:id="@+id/rb_cx"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/ic_tools_cx_selector"
            android:gravity="center"
            android:onClick="myClick"
            android:text="@string/tools_cx"
            android:textSize="10sp"
            android:visibility="gone" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/edit_rg2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_layout_transparent"
        android:orientation="horizontal"
        android:padding="5dp">

        <RadioButton
            android:id="@+id/rb_fgxb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/ic_tools_fgxb_selector"
            android:gravity="center"
            android:onClick="myClick"
            android:text="@string/tools_fgxb"
            android:textSize="10sp" />

        <RadioButton
            android:id="@+id/rb_xb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/ic_tools_xb_selector"
            android:gravity="center"
            android:onClick="myClick"
            android:text="@string/tools_xb"
            android:textSize="10sp" />

        <RadioButton
            android:id="@+id/rb_sxbj"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/ic_tools_sxbj_selector"
            android:gravity="center"
            android:onClick="myClick"
            android:text="@string/tools_sxbj"
            android:textSize="10sp" />

        <RadioButton
            android:id="@+id/rb_xzxb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/ic_tools_xzxb_selector"
            android:gravity="center"
            android:onClick="myClick"
            android:text="@string/tools_xzxb"
            android:textSize="10sp" />

        <RadioButton
            android:id="@+id/rb_py"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/ic_tools_py_selector"
            android:gravity="center"
            android:onClick="myClick"
            android:text="@string/tools_py"
            android:textSize="10sp" />
    </RadioGroup>

</LinearLayout>
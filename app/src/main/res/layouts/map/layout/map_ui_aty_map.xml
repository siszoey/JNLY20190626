<?xml version="1.0" encoding="utf-8"?>
<com.lib.bandaid.widget.drag.CustomDrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/mainFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.lib.bandaid.arcruntime.core.ArcMap
            android:id="@+id/arcMap"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:canOffline="true"
            app:canRotate="false" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/content_inset"
            android:clickable="true"
            android:src="@drawable/ic_add"
            app:elevation="6dp"
            app:pressedTranslationZ="12dp" />

    </FrameLayout>

    <!--右侧菜单布局-->
    <LinearLayout
        android:id="@+id/menuRight"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="left"
        android:background="#F0F3F6"
        android:clickable="true"
        android:orientation="vertical" />


</com.lib.bandaid.widget.drag.CustomDrawerLayout>

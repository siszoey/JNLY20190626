<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/headView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/drawer_header_height"
        android:background="@color/hx_deep_grey"
        android:orientation="vertical"
        android:tag="background|accent_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivHead"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/main_frame_left_menu_head" />

            <TextView
                android:id="@+id/tvAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="游客访问"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tvRealName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text=""
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footView"
        android:layout_below="@+id/headView"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <View
            android:visibility="gone"
            style="@style/h_line"
            android:layout_marginTop="10dp" />

        <TextView
            android:visibility="gone"
            style="@style/menu_item_style"
            android:drawableLeft="@drawable/ic_cloud_download"
            android:text="古树巡查" />

        <View
            android:visibility="gone"
            style="@style/h_line" />

        <TextView
            android:visibility="gone"
            style="@style/menu_item_style"
            android:drawableLeft="@drawable/ic_cloud_download"
            android:text="古树养护" />

        <View
            android:visibility="gone"
            style="@style/h_line"
            android:layout_marginBottom="10dp" />

        <LinearLayout
            android:id="@+id/llRoot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/footView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:padding="2dp"
        android:tag="background|accent_color">

        <View style="@style/h_line" />

        <TextView
            android:id="@+id/tvSync"
            style="@style/menu_item_style"
            android:drawableLeft="@drawable/ic_cloud_download"
            android:text="同步字典库" />

        <View style="@style/h_line" />
    </LinearLayout>

</RelativeLayout>

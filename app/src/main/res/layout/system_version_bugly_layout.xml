<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgray">

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="250dp"
            android:layout_height="110dp"
            android:src="@mipmap/lib_update_app_top_bg" />

        <TextView
            android:id="@+id/tv_upgrade_cancel"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="34dp"
            android:layout_marginEnd="8dp"
            android:background="@mipmap/lib_update_app_close"
            android:gravity="center"
            android:tag="beta_cancel_button"
            android:textColor="@color/transparent"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_upgrade_feature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv"
            android:background="@color/white"
            android:paddingStart="25.0dp"
            android:paddingTop="20.0dp"
            android:paddingEnd="25dp"
            android:paddingBottom="22dp"
            android:tag="beta_upgrade_feature"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <View
            android:id="@+id/line"
            style="@style/h_line"
            android:layout_below="@id/tv_upgrade_feature" />

        <TextView
            android:id="@+id/tv_upgrade_confirm"
            android:layout_width="match_parent"
            android:layout_height="45.0dp"
            android:layout_below="@id/line"
            android:background="@drawable/lib_update_app_info_bg"
            android:gravity="center"
            android:tag="beta_confirm_button"
            android:text="立即升级"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:tag="beta_title" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:tag="beta_upgrade_info" />
    </RelativeLayout>
</RelativeLayout>